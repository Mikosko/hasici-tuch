---
import "../styles/global.css";
const { imgSrc, title } = Astro.props;
---

<div class="w-full max-h-90 h-90 relative">
  <img class="object-cover h-full w-full absolute" src={imgSrc} />
  <div class="h-full w-full absolute bg-black/50"></div>

  <div class="absolute bottom-0 left-0 transform w-full flex flex-col">
    <div class="container mx-auto p-4">
      <h1 class="text-gray-100 font-bold text-7xl md:text-balance">{title}</h1>
    </div>
  </div>
</div>
