---
const { pathname } = Astro.url;
---

<div
  id="navigation"
  class="md:flex flex-row justify-center hidden lg:justify-end items-center min-h-15"
>
  <ul
    class="list-none sm:py-0 m-0 p-0 py-6 pt-8 flex flex-col sm:flex-row gap-8 text-gray-800"
  >
    <li class="p-0 m-0">
      <a
        href="/"
        aria-current={pathname.slice(1) === "" ? "page" : "false"}
        class="cursor-pointer text-nowrap font-semibold hover:text-orange-600 aria-[current='page']:text-orange-600 transition-colors group"
        >Domov</a
      >
    </li>
    <li class="p-0 m-0">
      <a
        href="/o-nas"
        aria-current={pathname.includes("o-nas") ? "page" : "false"}
        class="cursor-pointer text-nowrap font-semibold hover:text-orange-600 aria-[current='page']:text-orange-600 transition-colors group"
        >O nás</a
      >
    </li>
    <!-- <li class="p-0 m-0">
      <a
        href="/akce"
        aria-current={pathname.slice(1) === "akce" ? "page" : "false"}
        class="cursor-pointer text-nowrap font-semibold hover:text-orange-600 aria-[current='page']:text-orange-600 transition-colors group"
        >Akce</a
      >
    </li> -->
    <li class="p-0 m-0">
      <a
        href="/nase-historie"
        aria-current={pathname.includes("nase-historie") ? "page" : "false"}
        class="cursor-pointer text-nowrap font-semibold hover:text-orange-600 aria-[current='page']:text-orange-600 transition-colors group"
        >Historie</a
      >
    </li>
    <li class="p-0 m-0">
      <a
        href="/clenove"
        aria-current={pathname.includes("clenove") ? "page" : "false"}
        class="cursor-pointer text-nowrap font-semibold hover:text-orange-600 aria-[current='page']:text-orange-600 transition-colors group"
        >Členové</a
      >
    </li>
    <li class="p-0 m-0">
      <a
        href="/technika"
        aria-current={pathname.includes("technika") ? "page" : "false"}
        class="cursor-pointer text-nowrap font-semibold hover:text-orange-600 aria-[current='page']:text-orange-600 transition-colors group"
        >Technika</a
      >
    </li>
    <li class="p-0 m-0">
      <a
        href="/vyjezdy"
        aria-current={pathname.includes("vyjezdy") ? "page" : "false"}
        class="cursor-pointer text-nowrap font-semibold hover:text-orange-600 aria-[current='page']:text-orange-600 transition-colors group"
        >Výjezdy</a
      >
    </li>
    <li class="p-0 m-0">
      <a
        href="/ohlaseni-paleni"
        aria-current={pathname.includes("ohlaseni-paleni") ? "page" : "false"}
        class="cursor-pointer text-nowrap font-semibold text-white transition-colors group bg-orange-600 hover:bg-orange-700 px-6 py-2 rounded-2xl"
        >Ohlásit pálení</a
      >
    </li>
  </ul>
</div>

<script>
  const btn = document.querySelector("#mobile-menu-toggle");
  const nav = document.querySelector("#navigation");

  btn?.addEventListener("click", () => {
    btn?.classList.toggle("is-open");
    nav?.classList.toggle("hidden");
  });
</script>
